<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/light_gray</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:alertDialogTheme">@style/AppTheme.NoActionBar.Dialog</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorHighlight">@color/transparent_gray</item>
    </style>

    <style name="AppTheme.NoActionBar.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorControlNormal">@color/light_gray</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/dark_gray</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="statusBarBackground">@color/dark_gray</item>
        <item name="android:textColor">@color/white_smoke</item>
        <item name="backgroundColor">@color/dark_gray</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:alertDialogTheme">@style/AppTheme.NoActionBar.Dark.Dialog</item>
        <item name="android:popupMenuStyle">@style/PopupMenuDark</item>
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="android:textColorHighlight">@color/transparent_white</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="PopupMenuDark">
        <item name="android:popupBackground">@color/dark_gray</item>
        <item name="android:textColor">@color/white_smoke</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:textColor">@color/white_smoke</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/transparent_white</item>
    </style>
</resources>